<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>

<GridPane xmlns:fx="http://javafx.com/fxml"  hgap="10" vgap="10">
    <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>

    <GridPane GridPane.columnIndex="0" GridPane.rowIndex="0">
        <Button text="Вернуться к списку"
                onAction="#handleBackButtonAction"/>
    </GridPane>

    <Text text="Сообщение" fx:id="title"
          GridPane.columnIndex="0" GridPane.rowIndex="2"/>

    <GridPane GridPane.columnIndex="0" GridPane.rowIndex="4"
              hgap="10" vgap="10">

        <Label text="Дата:"
               GridPane.columnIndex="0"/>

        <Label fx:id="date"
               GridPane.columnIndex="1"/>

        <Label text="Автор:"
               GridPane.columnIndex="6"/>

        <Label fx:id="author"
               GridPane.columnIndex="8"/>
    </GridPane>

    <GridPane GridPane.columnIndex="0" GridPane.rowIndex="5">
        <Label fx:id="text"/>
    </GridPane>

    <GridPane GridPane.columnIndex="0" GridPane.rowIndex="6">
        <Button text="Редактировать"
                onAction="#handleEdit"/>
    </GridPane>

</GridPane>